<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomePageActivity" >

    <!--
    This tab strip will display the currently visible page title, as well as the page
    titles for adjacent pages, whilst also allowing tapping on the titles to move
    between pages.
    -->
    <android.support.v4.view.PagerTabStrip
        android:id="@+id/pager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/pager_tab_strip_background"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textAppearance="@style/PagerTabStripTextStyle" />

</android.support.v4.view.ViewPager>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seminar_banner_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="3dp">

        <com.almaghrib.mobile.util.view.FeedImageView
            android:id="@+id/seminarBannerImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/waleed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seminarBannerImageView"
            android:padding="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/seminar_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/buttonsLayout"
                android:layout_toStartOf="@+id/buttonsLayout">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORLD OF DREAMS"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:gravity="left"
                    android:ellipsize="marquee"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shaykh Waleed Basyouni"
                    android:textSize="14sp"
                    android:textColor="@color/sub_header_text_colour"
                    android:layout_below="@+id/titleTextView"
                    android:gravity="left"
                    android:ellipsize="marquee"
                    android:textAllCaps="true"
                    android:lines="1"/>

                <TextView
                    android:id="@+id/venueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TORONTO - JANUARY 8-10"
                    android:textSize="14sp"
                    android:textColor="@color/sub_header_text_colour"
                    android:layout_below="@+id/dateTextView"
                    android:textAllCaps="true"
                    android:gravity="left"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:text="@string/register"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/register_button"
                    android:minHeight="25dp"
                    android:maxWidth="25dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/registerButton"
                    android:layout_alignRight="@+id/registerButton"
                    android:layout_below="@+id/registerButton"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:text="@string/more_info"
                    android:textSize="10sp"
                    android:background="@drawable/more_info_button"
                    android:minHeight="25dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>